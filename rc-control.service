[Unit]
Description=DIRE Remote Control Board API
After=network-online.target rc-control-helper.service
Wants=network-online.target rc-control-helper.service

[Service]
Type=simple
User=tewelde
Group=tewelde
WorkingDirectory=/opt/rc-control/backend
EnvironmentFile=/etc/rc-control.env
ExecStart=/usr/bin/python3 /opt/rc-control/backend/remote_control_server.py
Restart=always
RestartSec=3
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
