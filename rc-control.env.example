# Copy to /etc/rc-control.env and adjust values
RC_ADMIN_TOKEN=change-to-strong-random-token
RC_BIND_HOST=127.0.0.1
RC_BIND_PORT=8765
RC_CONFIG_PATH=/opt/rc-control/backend/config.json
RC_DB_PATH=/opt/rc-control/backend/data/health.sqlite3
RC_MAX_BODY_BYTES=16384
RC_PROBE_TICK_SECONDS=2
RC_HELPER_SOCKET=/run/rc-control/helper.sock
RC_HELPER_SOCKET_GROUP=tewelde
RC_HELPER_TIMEOUT_SECONDS=15
RC_HELPER_MAX_BODY_BYTES=16384

# Optional: used by expensive health probes
# psql DSN for querying messaging backlog/failure indicators
RC_PG_DSN=postgresql://postgres:postgres@127.0.0.1:49153/cis10
# Override if provider base URL changes
AFRO_SMS_BASE_URL=https://api.afromessage.com/api
# Override if national ID gateway URL changes
NID_BASE_URL=http://196.188.240.67/gateway
